<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" styleClass="content-pane-scroll" xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trying3.controller.admin.KelolaPembayaranController">
    <content>
        <VBox spacing="30.0" styleClass="content-pane">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <children>

                <!-- ============================================
                     HEADER SECTION
                     ============================================ -->
                <VBox spacing="8.0" styleClass="page-header">
                    <children>
                        <Label styleClass="page-title" text="Kelola Pembayaran" />
                        <Label styleClass="page-subtitle" text="Verifikasi dan kelola pembayaran pelanggan" />
                    </children>
                </VBox>

                <!-- ============================================
                     STATISTICS CARDS
                     ============================================ -->
                <HBox spacing="20.0">
                    <children>

                        <!-- Menunggu Verifikasi -->
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="stat-title" text="Menunggu Verifikasi" />
                                <Label fx:id="menungguVerifikasiLabel" styleClass="stat-value" text="0" />
                                <Label styleClass="stat-subtitle" text="Pembayaran pending" />
                            </children>
                        </VBox>

                        <!-- Terverifikasi -->
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="stat-title" text="Terverifikasi" />
                                <Label fx:id="terverifikasiLabel" styleClass="stat-value" text="0" />
                                <Label styleClass="stat-subtitle" text="Pembayaran verified" />
                            </children>
                        </VBox>

                        <!-- Total Pendapatan -->
                        <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="stat-title" text="Total Pendapatan" />
                                <Label fx:id="totalPendapatanLabel" styleClass="stat-value" text="Rp 0" />
                                <Label styleClass="stat-subtitle" text="Pembayaran terverifikasi" />
                            </children>
                        </VBox>

                    </children>
                </HBox>

                <!-- ============================================
                     PEMBAYARAN MENUNGGU VERIFIKASI
                     ============================================ -->
                <VBox styleClass="card" spacing="20.0">
                    <children>

                        <!-- Header -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox alignment="BASELINE_LEFT" spacing="10">
                                            <children>
                                                <Label styleClass="card-title" text="Pembayaran Menunggu Verifikasi" />
                                                <Label fx:id="pendingCountLabel" styleClass="text-muted" text="(0 pembayaran)" />
                                            </children>
                                        </HBox>
                                        <Label fx:id="pendingSubtitle" styleClass="card-subtitle" text="..." />
                                    </children>
                                </VBox>

                                <!-- Refresh Button -->
                                <Button fx:id="refreshButton" styleClass="button-secondary" text="â†» Refresh">
                                    <padding>
                                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>

                        <!-- List Pembayaran Pending -->
                        <ListView fx:id="pendingListView" styleClass="pesanan-list-view" prefHeight="400.0">
                            <padding>
                                <Insets bottom="0" left="0" right="0" top="0" />
                            </padding>
                        </ListView>

                    </children>
                </VBox>

                <!-- ============================================
                     RIWAYAT PEMBAYARAN
                     ============================================ -->
                <VBox styleClass="card" spacing="20.0">
                    <children>

                        <!-- Header -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label styleClass="card-title" text="Riwayat Pembayaran" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- List Riwayat -->
                        <ListView fx:id="riwayatListView" styleClass="pesanan-list-view" prefHeight="500.0">
                            <padding>
                                <Insets bottom="0" left="0" right="0" top="0" />
                            </padding>
                        </ListView>

                    </children>
                </VBox>

            </children>
        </VBox>
    </content>
</ScrollPane>
