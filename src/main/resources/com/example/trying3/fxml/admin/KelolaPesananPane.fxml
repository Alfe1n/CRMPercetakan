<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<ScrollPane fitToWidth="true" styleClass="content-pane-scroll" xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trying3.controller.admin.KelolaPesananController">
    <content>
        <StackPane>
            <children>

                <VBox fx:id="daftarPesananPanel" spacing="30.0" styleClass="content-pane">
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                    <children>
                        
                        <!-- Header Section -->
                        <VBox spacing="8.0" styleClass="page-header">
                            <children>
                                <Label styleClass="page-title" text="Kelola Pesanan" />
                                <Label styleClass="page-subtitle" text="Kelola dan tambahkan pesanan pelanggan baru" />
                            </children>
                        </VBox>

                        <!-- Daftar Pesanan Card -->
                        <VBox styleClass="card" spacing="20.0">
                            <children>
                                
                                <!-- List Header dengan Tombol Tambah -->
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="BASELINE_LEFT" spacing="10">
                                                    <children>
                                                        <Label styleClass="card-title" text="Daftar Pesanan" />
                                                        <Label fx:id="resultCountLabel" styleClass="text-muted" text="(0)" />
                                                    </children>
                                                </HBox>
                                                <Label styleClass="card-subtitle" text="Semua pesanan yang telah dibuat" />
                                            </children>
                                        </VBox>

                                        <!-- Tombol Tambah Pesanan Baru -->
                                        <Button fx:id="btnTambahPesanan" styleClass="button-primary" text="âž• Tambah Pesanan">
                                            <padding>
                                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Filter Section -->
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <!-- Search Field -->
                                        <TextField fx:id="searchField" promptText="ðŸ” Cari pesanan..." styleClass="text-field" prefWidth="300">
                                            <padding>
                                                <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                                            </padding>
                                        </TextField>

                                        <!-- Filter Status -->
                                        <ComboBox fx:id="filterStatusComboBox" promptText="Filter Status" styleClass="combo-box" minWidth="150.0">
                                            <padding>
                                                <Insets bottom="6.0" left="10.0" right="10.0" top="6.0" />
                                            </padding>
                                        </ComboBox>

                                        <!-- Spacer -->
                                        <Region HBox.hgrow="ALWAYS" />

                                        <!-- Refresh Button -->
                                        <Button fx:id="refreshButton" styleClass="button-secondary" text="â†» Refresh">
                                            <padding>
                                                <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Card List View -->
                                <ListView fx:id="pesananListView" styleClass="pesanan-list-view" prefHeight="600.0">
                                    <padding>
                                        <Insets bottom="0" left="0" right="0" top="0" />
                                    </padding>
                                </ListView>

                            </children>
                        </VBox>

                    </children>
                </VBox>

                <VBox fx:id="formTambahPanel" spacing="30.0" styleClass="content-pane" visible="false" managed="false">
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                    <children>
                        
                        <!-- Header with Back Button -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <VBox spacing="8.0" styleClass="page-header">
                                    <children>
                                        <Label styleClass="page-title" text="Tambah Pesanan Baru" />
                                        <Label styleClass="page-subtitle" text="Isi formulir untuk menambahkan pesanan pelanggan" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Form Card -->
                        <VBox styleClass="card" spacing="25.0">
                            <children>

                                <!-- Form Grid -->
                                <GridPane hgap="25.0" vgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>

                                    <children>

                                        <!-- ROW 0: Nama Pelanggan & No. Telepon -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <children>
                                                <Label styleClass="form-label" text="Nama Pelanggan *" />
                                                <TextField fx:id="namaPelangganField" promptText="Masukkan nama lengkap pelanggan" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label styleClass="form-label" text="No. Telepon *" />
                                                <TextField fx:id="noTeleponField" promptText="08xxxxxxxxxx" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <!-- ROW 1: Email & Jenis Layanan -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                            <children>
                                                <Label styleClass="form-label" text="Email" />
                                                <TextField fx:id="emailField" promptText="email@contoh.com" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <children>
                                                <Label styleClass="form-label" text="Jenis Layanan *" />
                                                <ComboBox fx:id="jenisLayananComboBox" maxWidth="Infinity" promptText="Pilih jenis layanan" styleClass="combo-box" />
                                            </children>
                                        </VBox>

                                        <!-- ROW 2: Jumlah & Total Harga -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                            <children>
                                                <Label styleClass="form-label" text="Jumlah *" />
                                                <TextField fx:id="jumlahField" promptText="Masukkan jumlah (angka)" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <children>
                                                <Label styleClass="form-label" text="Total Harga (Rp) *" />
                                                <TextField fx:id="totalHargaField" promptText="Contoh: 500000" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <!-- ROW 3: Spesifikasi (Full Width) -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                            <children>
                                                <Label styleClass="form-label" text="Spesifikasi Pesanan" />
                                                <TextArea fx:id="spesifikasiArea" prefHeight="100.0" promptText="Tulis spesifikasi detail pesanan (ukuran, bahan, warna, dll)" styleClass="text-area" wrapText="true" />
                                            </children>
                                        </VBox>

                                    </children>
                                </GridPane>

                                <!-- Action Buttons -->
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                    <children>
                                        <Button fx:id="simpanPesananButton" styleClass="button-primary" text="ðŸ’¾ Simpan Pesanan">
                                            <padding>
                                                <Insets bottom="12.0" left="28.0" right="28.0" top="12.0" />
                                            </padding>
                                        </Button>

                                        <Button fx:id="batalTambahButton" styleClass="button-secondary" text="Batal">
                                            <padding>
                                                <Insets bottom="12.0" left="28.0" right="28.0" top="12.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Info Text -->
                                <Label styleClass="text-muted" text="* Field wajib diisi">
                                    <padding>
                                        <Insets top="5.0" />
                                    </padding>
                                </Label>

                            </children>
                        </VBox>

                    </children>
                </VBox>

                <VBox fx:id="formEditPanel" spacing="30.0" styleClass="content-pane" visible="false" managed="false">
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                    <children>
                        
                        <!-- Header with Back Button -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <VBox spacing="8.0" styleClass="page-header">
                                    <children>
                                        <Label styleClass="page-title" text="Edit Pesanan" />
                                        <Label fx:id="editSubtitleLabel" styleClass="page-subtitle" text="Ubah data pesanan pelanggan" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Form Card -->
                        <VBox styleClass="card" spacing="25.0">
                            <children>

                                <!-- Hidden ID Pesanan -->
                                <Label fx:id="editIdPesananLabel" visible="false" managed="false" />

                                <!-- Form Grid (Same as Tambah) -->
                                <GridPane hgap="25.0" vgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>

                                    <children>

                                        <!-- ROW 0: Nama Pelanggan & No. Telepon -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <children>
                                                <Label styleClass="form-label" text="Nama Pelanggan *" />
                                                <TextField fx:id="editNamaPelangganField" promptText="Masukkan nama lengkap pelanggan" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                            <children>
                                                <Label styleClass="form-label" text="No. Telepon *" />
                                                <TextField fx:id="editNoTeleponField" promptText="08xxxxxxxxxx" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <!-- ROW 1: Email & Jenis Layanan -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                            <children>
                                                <Label styleClass="form-label" text="Email" />
                                                <TextField fx:id="editEmailField" promptText="email@contoh.com" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <children>
                                                <Label styleClass="form-label" text="Jenis Layanan *" />
                                                <ComboBox fx:id="editJenisLayananComboBox" maxWidth="Infinity" promptText="Pilih jenis layanan" styleClass="combo-box" />
                                            </children>
                                        </VBox>

                                        <!-- ROW 2: Jumlah & Total Harga -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                            <children>
                                                <Label styleClass="form-label" text="Jumlah *" />
                                                <TextField fx:id="editJumlahField" promptText="Masukkan jumlah (angka)" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <children>
                                                <Label styleClass="form-label" text="Total Harga (Rp) *" />
                                                <TextField fx:id="editTotalHargaField" promptText="Contoh: 500000" styleClass="text-field" />
                                            </children>
                                        </VBox>

                                        <!-- ROW 3: Spesifikasi (Full Width) -->
                                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                            <children>
                                                <Label styleClass="form-label" text="Spesifikasi Pesanan" />
                                                <TextArea fx:id="editSpesifikasiArea" prefHeight="100.0" promptText="Tulis spesifikasi detail pesanan" styleClass="text-area" wrapText="true" />
                                            </children>
                                        </VBox>

                                    </children>
                                </GridPane>

                                <!-- Action Buttons -->
                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding>
                                    <children>
                                        <Button fx:id="updatePesananButton" styleClass="button-primary" text="ðŸ’¾ Update Pesanan">
                                            <padding>
                                                <Insets bottom="12.0" left="28.0" right="28.0" top="12.0" />
                                            </padding>
                                        </Button>

                                        <Button fx:id="batalEditButton" styleClass="button-secondary" text="Batal">
                                            <padding>
                                                <Insets bottom="12.0" left="28.0" right="28.0" top="12.0" />
                                            </padding>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Info Text -->
                                <Label styleClass="text-muted" text="* Field wajib diisi">
                                    <padding>
                                        <Insets top="5.0" />
                                    </padding>
                                </Label>

                            </children>
                        </VBox>

                    </children>
                </VBox>

            </children>
        </StackPane>
    </content>
</ScrollPane>
