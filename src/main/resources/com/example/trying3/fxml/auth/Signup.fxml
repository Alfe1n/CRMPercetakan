<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="1080.0" minWidth="1920.0" style="-fx-background-color: #f4f7fa;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trying3.controller.auth.SignupController">
    <children>
        <!-- Header -->
        <VBox alignment="CENTER" prefHeight="200.0">
            <children>
                <Label text="Create Test Account">
                    <font>
                        <Font name="Microsoft YaHei UI Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="⚠️ Halaman ini HANYA untuk testing - akan dihapus di production">
                    <font>
                        <Font name="Microsoft YaHei UI" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
      <HBox alignment="TOP_CENTER">
         <children>
      
              <!-- Form Signup -->
              <VBox prefHeight="500.0" prefWidth="509.0" style="-fx-background-color: #fff; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                  <padding>
                      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                  </padding>
                  <children>
                      <Label text="FORM REGISTRASI">
                          <font>
                              <Font name="Microsoft YaHei UI Bold" size="18.0" />
                          </font>
                      </Label>
      
                      <!-- Username -->
                      <Label text="Username">
                          <VBox.margin>
                              <Insets top="20.0" />
                          </VBox.margin>
                      </Label>
                      <TextField fx:id="txtUsername" prefHeight="40.0" promptText="Masukkan username" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
      
                      <!-- Password -->
                      <Label text="Password">
                          <VBox.margin>
                              <Insets top="15.0" />
                          </VBox.margin>
                      </Label>
                      <PasswordField fx:id="txtPassword" prefHeight="40.0" promptText="Masukkan password" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
      
                      <!-- Nama Lengkap -->
                      <Label text="Nama Lengkap">
                          <VBox.margin>
                              <Insets top="15.0" />
                          </VBox.margin>
                      </Label>
                      <TextField fx:id="txtNamaLengkap" prefHeight="40.0" promptText="Masukkan nama lengkap" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
      
                      <!-- Email -->
                      <Label text="Email">
                          <VBox.margin>
                              <Insets top="15.0" />
                          </VBox.margin>
                      </Label>
                      <TextField fx:id="txtEmail" prefHeight="40.0" promptText="Masukkan email" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;" />
      
                      <!-- Role -->
                      <Label text="Role">
                          <VBox.margin>
                              <Insets top="15.0" />
                          </VBox.margin>
                      </Label>
                      <ComboBox fx:id="cmbRole" prefHeight="40.0" prefWidth="330.0" promptText="Pilih role">
                          <VBox.margin>
                              <Insets />
                          </VBox.margin>
                      </ComboBox>
      
                      <!-- Buttons -->
                      <HBox alignment="CENTER" spacing="10.0">
                          <VBox.margin>
                              <Insets top="25.0" />
                          </VBox.margin>
                          <children>
                              <Button maxWidth="Infinity" onAction="#handleSignup" prefHeight="45.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" text="Buat Akun">
                                  <font>
                                      <Font name="Yu Gothic UI Semibold" size="14.0" />
                                  </font>
                              </Button>
                              <Button maxWidth="Infinity" onAction="#handleBackToLogin" prefHeight="45.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Kembali ke Login">
                                  <font>
                                      <Font name="Yu Gothic UI Semibold" size="14.0" />
                                  </font>
                              </Button>
                          </children>
                      </HBox>
                  </children>
              </VBox>
         </children>
      </HBox>
    </children>
</VBox>
