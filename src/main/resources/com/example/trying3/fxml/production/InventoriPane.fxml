<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/21.0.0"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@production.css"
            fx:controller="com.example.trying3.controller.production.InventoriController"
            styleClass="content-pane-scroll"
            style="-fx-background: transparent; -fx-background-color: transparent;">

    <content>
        <VBox spacing="20.0" style="-fx-background-color: #f4f7fa;">
            <padding>
                <Insets top="30" left="30" right="30" bottom="30"/>
            </padding>

            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label styleClass="page-title" text="Inventori" />
                                <Label styleClass="muted" text="Kelola stok bahan dan supplies" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <FlowPane fx:id="inventoryContainer" hgap="25.0" vgap="25.0" prefWrapLength="800.0" />

            </children>
        </VBox>
    </content>
</ScrollPane>