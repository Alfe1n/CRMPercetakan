<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trying3.controller.management.DashboardManagementPaneController">
    <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>
    <children>
        <VBox spacing="5.0">
            <children>
                <Label text="Dashboard Manajemen" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Label text="Ringkasan performa dan kesehatan bisnis secara real-time" style="-fx-text-fill: #7f8c8d;" />
            </children>
        </VBox>

        <HBox spacing="20.0">
            <children>
                <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Total Pesanan" style="-fx-text-fill: #7f8c8d;" />
                        <Label fx:id="totalOrderLabel" text="0" style="-fx-font-size: 26px; -fx-font-weight: bold;" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Tingkat Penyelesaian" style="-fx-text-fill: #7f8c8d;" />
                        <Label fx:id="completionLabel" text="0%" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Total Pendapatan" style="-fx-text-fill: #7f8c8d;" />
                        <Label fx:id="revenueLabel" text="Rp 0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2980b9;" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Rerata Per Pesanan" style="-fx-text-fill: #7f8c8d;" />
                        <Label fx:id="avgOrderValueLabel" text="Rp 0" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Distribusi Layanan" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <PieChart fx:id="serviceChart" legendSide="BOTTOM" />
                    </children>
                </VBox>
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Status Operasional" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <PieChart fx:id="statusChart" legendSide="BOTTOM" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>