<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.trying3.controller.management.LaporanController"
            stylesheets="@manajemen.css">

    <VBox spacing="24" styleClass="page-root">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24"/>
        </padding>

        <!-- HEADER -->
        <VBox spacing="4">
            <Text text="Laporan" styleClass="page-title"/>
            <Text text="Laporan operasional dan keuangan" styleClass="page-subtitle"/>
        </VBox>

        <!-- FILTER -->
        <VBox spacing="16" styleClass="card">
            <Text text="Hasilkan Laporan" styleClass="card-title"/>
            <Text text="Pilih jenis dan periode laporan yang ingin diunduh"
                  styleClass="text-muted"/>

            <GridPane hgap="24" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <!-- LABEL -->
                <Label text="Periode Laporan"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>

                <Label text="Jenis Laporan"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>

                <!-- COMBOBOX -->
                <ComboBox fx:id="comboPeriode"
                          prefWidth="800"
                          styleClass="combo-field"
                          GridPane.columnIndex="0"
                          GridPane.rowIndex="1"/>

                <ComboBox fx:id="comboJenis"
                          prefWidth="800"
                          styleClass="combo-field"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>
            </GridPane>

            <HBox spacing="12">
                <Button fx:id="btnExcel" text="Unduh Laporan Excel" styleClass="btn-primary"/>
                <Button fx:id="btnPDF" text="Unduh PDF" styleClass="btn-secondary"/>
            </HBox>
        </VBox>

        <!-- SUMMARY -->
        <HBox spacing="20">
            <VBox styleClass="stat-card">
                <Label text="Total Pesanan" styleClass="stat-label"/>
                <Label fx:id="txtTotalPesanan" text="0" styleClass="stat-value"/>
                <Label text="Semua periode" styleClass="text-muted"/>
            </VBox>

            <VBox styleClass="stat-card">
                <Label text="Pesanan Selesai" styleClass="stat-label"/>
                <Label fx:id="txtPesananSelesai" text="0" styleClass="stat-value"/>
                <Label fx:id="txtSelesaiPersen" text="Tingkat penyelesaian 0%"
                       styleClass="text-muted"/>
            </VBox>

            <VBox styleClass="stat-card">
                <Label text="Total Pendapatan" styleClass="stat-label"/>
                <Label fx:id="txtPendapatan" text="Rp 0" styleClass="stat-value"/>
                <Label text="Pembayaran terverifikasi" styleClass="text-muted"/>
            </VBox>

            <VBox styleClass="stat-card">
                <Label text="Pesanan Tertunda" styleClass="stat-label"/>
                <Label fx:id="txtTertunda" text="0" styleClass="stat-value"/>
                <Label text="Perlu tindak lanjut" styleClass="text-muted"/>
            </VBox>
        </HBox>

        <!-- LAYANAN -->
        <VBox spacing="12" styleClass="card">
            <Text text="Performa untuk Layanan" styleClass="card-title"/>
            <VBox fx:id="layananContainer" spacing="6"/>
        </VBox>

        <!-- AKTIVITAS -->
        <VBox spacing="12" styleClass="card">
            <Text text="Aktivitas Terbaru" styleClass="card-title"/>
            <VBox fx:id="activityContainer" spacing="6"/>
        </VBox>

    </VBox>
</ScrollPane>
