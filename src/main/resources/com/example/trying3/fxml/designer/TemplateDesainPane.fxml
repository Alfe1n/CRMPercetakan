<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.SVGPath?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@designer.css"
            fx:controller="com.example.trying3.controller.design.TemplateDesainPaneController"
            styleClass="content-pane-scroll"
            style="-fx-background: transparent; -fx-background-color: transparent;">

    <content>
        <VBox spacing="25.0" style="-fx-background-color: #f4f7fa;">
            <padding>
                <Insets top="30" left="30" right="30" bottom="30"/>
            </padding>

            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="page-title" text="Template Desain" />
                        <Label styleClass="muted" text="Kelola template desain untuk mempercepat proses" />
                    </children>
                </VBox>

                <VBox styleClass="card" spacing="20.0">
                    <children>
                        <Label styleClass="card-title" text="Template Tersedia" />

                        <FlowPane fx:id="templateContainer" hgap="20.0" vgap="20.0" prefWrapLength="1000.0" />
                    </children>
                </VBox>

            </children>
        </VBox>
    </content>
</ScrollPane>