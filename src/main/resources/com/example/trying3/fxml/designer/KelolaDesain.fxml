<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/21.0.0"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@designer.css"
            fx:controller="com.example.trying3.controller.design.KelolaDesignController"
            styleClass="content-pane-scroll"
            style="-fx-background: transparent; -fx-background-color: transparent;">

    <content>
        <VBox spacing="25.0" style="-fx-background-color: #f4f7fa;">
            <padding>
                <Insets top="30" left="30" right="30" bottom="30"/>
            </padding>

            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="page-title" text="Kelola Desain" />
                        <Label styleClass="muted" text="Kelola proses desain dan approval" />
                    </children>
                </VBox>

                <HBox spacing="20.0">
                    <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                        <HBox alignment="CENTER_LEFT">
                            <Label styleClass="stat-title" text="Menunggu Desain"/>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="ðŸ•’" style="-fx-text-fill: #999; -fx-font-size:14px;"/>
                        </HBox>
                        <Label fx:id="lblCountWaiting" styleClass="stat-value" text="0"/>
                        <Label styleClass="stat-subtitle" text="Perlu dikerjakan"/>
                    </VBox>

                    <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                        <HBox alignment="CENTER_LEFT">
                            <Label styleClass="stat-title" text="Perlu Revisi"/>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="ðŸ“" style="-fx-text-fill: #999; -fx-font-size:14px;"/>
                        </HBox>
                        <Label fx:id="lblCountRevision" styleClass="stat-value" text="0"/>
                        <Label styleClass="stat-subtitle" text="Perlu diperbaiki"/>
                    </VBox>

                    <VBox styleClass="stat-box" HBox.hgrow="ALWAYS">
                        <HBox alignment="CENTER_LEFT">
                            <Label styleClass="stat-title" text="Disetujui"/>
                            <Region HBox.hgrow="ALWAYS" />
                            <Label text="âœ”" style="-fx-text-fill: #999; -fx-font-size:14px;"/>
                        </HBox>
                        <Label fx:id="lblCountApproved" styleClass="stat-value" text="0"/>
                        <Label styleClass="stat-subtitle" text="Siap produksi"/>
                    </VBox>
                </HBox>

                <VBox styleClass="card" spacing="20.0">
                    <children>
                        <VBox spacing="2">
                            <Label styleClass="card-title" text="Antrian Desain"/>
                            <Label styleClass="muted" text="Pesanan yang menunggu proses desain" />
                        </VBox>

                        <VBox fx:id="ordersContainer" spacing="20.0" />
                    </children>
                </VBox>

                <VBox fx:id="revisiPopupContainer" visible="false" managed="false"
                      style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Label fx:id="lblRevisiTitle" text="Catatan Revisi" styleClass="card-title"/>
                    <Region prefHeight="10"/>
                    <Label text="Masukan dari Pelanggan:" styleClass="form-label"/>
                    <TextArea fx:id="txtRevisi" prefRowCount="3" wrapText="true" styleClass="text-area"/>
                    <Region prefHeight="10"/>
                    <HBox spacing="10">
                        <Button text="Kirim Revisi" onAction="#submitRevisi" styleClass="button-danger"/>
                        <Button text="Batal" onAction="#cancelRevisi" styleClass="button-secondary"/>
                    </HBox>
                </VBox>

            </children>
        </VBox>
    </content>
</ScrollPane>